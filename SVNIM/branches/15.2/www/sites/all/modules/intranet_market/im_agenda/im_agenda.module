function _relais_item_autocompletes($string) {
  $matches = array();
  $option_type =array();
  $query = db_select('store_item_fields_desc', 'p');
  $return = $query
    ->fields('p', array('dit_lib','ddo_lib','dsd_lib','dit_idt_type'))
